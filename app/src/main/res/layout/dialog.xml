<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimension320"
    xmlns:abb="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dimension30"
    android:layout_marginBottom="@dimen/dimension30"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    abb:cardMaxElevation="@dimen/dimension12"
    abb:cardCornerRadius="@dimen/text20"
    abb:cardBackgroundColor="@color/colorGreyLite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="@dimen/dimension12"
        android:background="@drawable/dialog_background">

        <com.example.islamicapplication.custom_font.TextViewCustomFont
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorYellow"
            android:textSize="22sp"
            android:gravity="center"
            tools:text="a;lskda;lsdkna;lsdkn" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimension16">

            <com.example.islamicapplication.custom_font.TextViewCustomFont
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:gravity="center"
                tools:text="a;lskda;lsdkna;lsdkn" />
        </ScrollView>
    </LinearLayout>

</android.support.v7.widget.CardView>